{
	"Serilog": {
		"Using": [
			"Serilog.Sinks.Console"
		],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft.EntityFrameworkCore": "Warning",
				"Microsoft.EntityFrameworkCore.Migrations": "Information",
				"Microsoft.AspNetCore": "Warning",
				"CorrelationId": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Console"
			},
			{
				"Name": "PostgreSql",
				"Args": {
					"tableName": "ApplicationLogs",
					"needAutoCreateTable": true,
					"loggerColumnOptions": {
						"Id": "IdAutoIncrement",
						"Level": "LevelAsText",
						"TimeStamp": "Timestamp",
						"Properties": "Properties",
						"LogEvent": "LogEvent",
						"Message": "Message",
						"RenderedMessage": "RenderedMessage",
						"Exception": "Exception"
					}
				}
			}
		],
		"Enrich": [
			"FromLogContext",
			"WithThreadId",
			"WithCorrelationId"
		]
	}
}
